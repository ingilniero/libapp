<div class="row span4 offset4">
  <h2>New Book</h2>
  <%= form_for @book do | f | %>
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "title" %>

    <%= f.label :pages %>
    <%= f.text_field :pages, placeholder: "total pages" %>
    
    <%= f.label :author %>
    <%= f.text_field :author, placeholder: "author" %>

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "description" %>

    <%= f.submit 'Create', class: "btn btn-primary" %>
  <% end %>
</div>

